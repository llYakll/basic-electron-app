{
    "name": "barebones-ts-app",
    "version": "1.0.0",
    "main": "dist/main/index.js",
    "scripts": {
      "compile": "node build.js",
      "start": "npm run compile && electron ./dist/main/index.js",
      "package": "npm run compile && electron-forge package",
      "make": "npm run compile && electron-forge make",
      "lint": "echo \"No linting configured\"",
      "install-app": "node install-app.js"
    },
    "keywords": [
      "react",
      "template",
      "electron"
    ],
    "author": "llYakll",
    "description": "A Template for an Electron application using React and TS.",
    "license": "MIT",
    "config": {
      "forge": {
        "packagerConfig": {
          "asar": true
        },
        "makers": [
          {
            "name": "@electron-forge/maker-squirrel",
            "config": {}
          },
          {
            "name": "@electron-forge/maker-zip",
            "platforms": [
              "darwin"
            ]
          },
          {
            "name": "@electron-forge/maker-deb",
            "config": {}
          },
          {
            "name": "@electron-forge/maker-rpm",
            "config": {}
          }
        ],
        "plugins": [
          {
            "name": "@electron-forge/plugin-auto-unpack-natives",
            "config": {}
          }
        ]
      }
    },
    "devDependencies": {
      "@electron-forge/cli": "^6.0.0-beta.54",
      "@electron-forge/maker-deb": "^6.0.0-beta.54",
      "@electron-forge/maker-rpm": "^6.0.0-beta.54",
      "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
      "@electron-forge/maker-zip": "^6.0.0-beta.54",
      "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
      "@types/electron": "^1.6.10",
      "@types/node": "^14.14.41",
      "copyfiles": "^2.4.1",
      "electron": "^31.3.1",
      "electron-squirrel-startup": "^1.0.1",
      "react": "^17.0.2",
      "react-dom": "^17.0.2",
      "typescript": "^4.2.4",
      "esbuild": "^0.12.1"
    },
    "dependencies": {
      "@types/react": "^18.3.3",
      "@types/react-dom": "^18.3.0"
    }
  }
  